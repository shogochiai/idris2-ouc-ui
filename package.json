{
  "name": "idris2-ouc-ui",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:idris": "pack build oucdashboard.ipkg",
    "build:auth": "npx esbuild src/auth.js --bundle --format=iife --global-name=oucAuth --outfile=dist/auth.js",
    "build:indexer": "npx esbuild src/indexer.js --bundle --format=iife --global-name=oucIndexer --outfile=dist/indexer.js",
    "build:dist": "cp build/exec/oucdashboard dist/app.js && cp src/index.html dist/ && cp src/style.css dist/",
    "build": "npm run build:idris && mkdir -p dist && npm run build:auth && npm run build:indexer && npm run build:dist",
    "deploy:local": "dfx deploy --network local",
    "deploy:ic": "dfx deploy --network ic",
    "test": "pack test oucdashboard-tests.ipkg"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shogochiai/idris2-ouc-ui.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/shogochiai/idris2-ouc-ui/issues"
  },
  "homepage": "https://github.com/shogochiai/idris2-ouc-ui#readme",
  "dependencies": {
    "@dfinity/agent": "^3.4.3",
    "@dfinity/auth-client": "^3.4.3",
    "@dfinity/principal": "^3.4.3",
    "playwright": "^1.57.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.2"
  }
}
